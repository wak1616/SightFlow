{
  "name": "SightFlow Nextech Helper",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Streamlines workflow in Intellechart by providing keyboard shortcuts or copilot (TBD) to insert text into HPI fields",
  "permissions": ["activeTab", "commands", "sidePanel", "storage"],
  "host_permissions": ["https://app1.intellechart.net/*", "https://api.openai.com/*"],
  "action": {
    "default_title": "SightFlow"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": { "service_worker": "background.js" },
  "commands": {
    "sf-insert-hpi": { "suggested_key": { "default": "Alt+Shift+H" }, "description": "Insert text" },
    "sf-insert-psfhros": { "suggested_key": { "default": "Alt+Shift+M" }, "description": "select PMH elements" }
  },
  "content_scripts": [
    {
      "js": ["scripts/shared_utils.js", "scripts/history_input.js", "scripts/psfhros_input.js", "scripts/command_executor.js"],
      "matches": ["https://app1.intellechart.net/Eye2MVC/Chart/Chart/Index/"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}