{
  "name": "SightFlow Nextech Helper",
  "version": "0.2.0",
  "manifest_version": 3,
  "description": "AI-powered medical charting assistant with voice input for Intellechart. Streamlines workflow with intelligent parsing and command generation.",
  "permissions": [
    "activeTab",
    "commands",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://app1.intellechart.net/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_title": "SightFlow AI Assistant"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "sf-insert-hpi": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": "Insert HPI (History)"
    },
    "sf-insert-psfhros": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Select PMH (PSFH/ROS)"
    }
  },
  "content_scripts": [
    {
      "js": [
        "scripts/shared_utils.js",
        "scripts/history_input.js",
        "scripts/psfhros_input.js"
      ],
      "matches": [
        "https://app1.intellechart.net/Eye2MVC/Chart/Chart/Index/"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "services/*.js",
        "config/*.js"
      ],
      "matches": [
        "https://app1.intellechart.net/*"
      ]
    }
  ]
}